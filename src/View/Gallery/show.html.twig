{% extends 'layout.html.twig' %}
{% block title %}
{{ parent() }} - Galerie
{% endblock %}
{% block content %}
    <div class="container-fluid wall main-content">
        <div class="row">
            {% for painting in paintings %}
                <div class=" col-sm-8  col-md-4 col-lg-3 card border-0 bg-transparent mt-4 p-5">
                    <img src="{{ painting.image }}" class="card-img-top frame2" alt="{{ painting.title }}">
                    <div class="card-body">
                        <p class="card-title h5 text-center painting-title">{{ painting.title }}</p>
                        <p class="card-text h6 text-center font-weight-bold bg-white">
                            • {{ painting.artist_name }} •<br>
                            {{ painting.end_date }}
                        </p>
                        <div class="d-flex justify-content-end"><a href="/Gallery/deletePainting/{{ session.pseudo }}/{{ painting.id }}"><i class="fas fa-paint-roller"></i></a></div>
                    </div>
                </div>
            {% else %}
                <p>
                    Tu n'as pas encore liké d'oeuvre ! Commence vite à jouer :)
                </p>
            {% endfor %}
        </div>
    </div>

{% endblock %}