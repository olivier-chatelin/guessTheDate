{% extends 'layout.html.twig' %}
{% block title %}
    {{ parent() }} - department
{% endblock %}
{% block content %}
    <div class="main-content mt-5">
    <div class="container-fluid d-none d-lg-block overflow-hidden">
        <div class="card card-aside " >
            <img src="/assets/images/departments/dept.jpg" id="card-img" class="card-img-top" alt="">
            <div class="card-body bg-primary align-self-end">
                <p id ="card-text" class="card-text text-secondary" font-weight-bold text-center">Bienvenue. Veuillez choisir un d√©partement </p>
            </div>
        </div>
        <div>
            <img id="Image-Maps-Com-image-maps"  src="/assets/images/maps/met.png"  class='image-map justify-content-center' usemap="#image-maps" alt="met" />
            <map name="image-maps" id="ImageMapsCom-image-maps">
                {% for department in departments %}
                    <area  alt="met{{department.dept_nb}}"  id="dept{{department.dept_nb}}" class="area" href="quizz/{{department.dept_nb}}" shape="poly" coords="{{department.map_coords}}" target="_self" title="{{department.description}}"/>
                {% endfor %}
            </map>
        </div>
    </div>
    <div class="container d-none d-md-block d-lg-none  " >
        <div class="row">
            {% for department in departments|slice(0,12) %}
                <div class="col-4 my-2">
                    <div class="card">
                        <img src="/assets/images/departments/dept{{department.dept_nb}}.jpg" class="card-img-top" alt="{{ department.title }}">
                        <a href="quizz/{{department.dept_nb}}" class="card-body text-secondary bg-primary">
                            <p class="text-bold text-center">{{ department.title }}</p>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="container d-sm-block d-md-none">
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/assets/images/departments/dept{{departments.0.dept_nb}}.jpg" class="d-block w-100" alt="{{departments.0.title}}.">

                    <div class="d-flex flex-column align-items-center my-2">

                    <a class="btn bg-primary text-secondary" href="/Game/quizz/{{departments.0.dept_nb}}">{{departments.0.title}}.</a>
                    <p class="text-primary">{{departments.0.description}}.</p>
                    </div>
                </div>
                {% for department in departments|slice(1,11)%}
                    <div class="carousel-item" >
                        <img src="/assets/images/departments/dept{{department.dept_nb}}.jpg"  class="d-block w-100" alt=" {{ department.title }}">
                        <div class="d-flex flex-column align-items-center my-2">
                            <a class="btn bg-primary text-secondary self" href="/Game/quizz/{{department.dept_nb}}">{{ department.title }}</a>
                            <p class="text-primary">{{ department['description'] }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <a class="carousel-control-prev dept" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next dept" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    </div>
{% endblock %}
{% block javascript %}
{{ parent() }}
    <script src="/assets/scripts/script.js"></script>
{% endblock %}
