{% extends 'layout.html.twig' %}
{% block title %}
    {{ parent() }} - Score
{% endblock %}
{% block content %}

    <div class="container  mt-5" style="height:50vh" >
        <div class="row h-100 border-bottom border-dark">
            <div class="col-4 d-flex flex-column justify-content-end align-items-center  h-100">
                <img src="/assets/images/avatar{{ scores[1]['avatar_id'] }}.png" alt="Soyez le deuxième à jouer" class="img-fluid w-50">
                <p>{{ scores[1]['pseudo'] }}</p>
                <p>{{ scores[1]['best_score']}}  </p>
                <div class="bg-danger h-25 w-100 mx-0 text-center rounded-top"><span class="display-4 text-light">2</span></div>
            </div>
            <div class="col-4 d-flex flex-column justify-content-end align-items-center h-100">
                <img src="/assets/images/avatar{{ scores[0]['avatar_id'] }}.png" alt="Soyez le premier à jouer" class="img-fluid w-50">
                <p>{{ scores[0]['pseudo'] }}</p>
                <p>{{ scores[0]['best_score']}}  </p>
                <div class="bg-danger h-50 w-100 mx-0 text-center rounded-top"><span class="display-4 text-light">1</span></div>
            </div>
            <div class="col-4 d-flex flex-column justify-content-end align-items-center h-100">
                <img src="/assets/images/avatar{{ scores[3]['avatar_id'] }}.png" alt="Soyez le troisième à jouer" class="img-fluid w-50">
                <p>{{ scores[2]['pseudo'] }}</p>
                <p>{{ scores[2]['best_score']}}</p>
                <div class="bg-danger h-10 w-100 mx-0 text-center rounded-top"><span class="display-4 text-light">3</span></div>
            </div>
        </div>
    </div>
    <div class="container w-25" >
        <form action="" method="POST">
            <div class="input-group">
                <select name = "idDepartmentSelected" class="custom-select w-50" id="inputGroupSelect04" aria-label="Example select with button addon">
                    {% for department in  departments|slice(0,12) %}
                    {% set selected = ''%}
                        {% if department['id'] ==  idSelected %}
                            {{ department['id'] }} = {{ idSelected }}
                            {% set selected = 'selected'%}
                        {% endif %}
                        <option {{ selected }} value={{ department['id'] }}>{{ department['title'] }}</option>
                    {% endfor %}
                </select>
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit">ok</button>
                </div>
            </div>
        </form>
        <table class="table table-sm mt-5 table-danger">

            <tbody>
                {% for score in scores|slice(3,50) %}
                    <tr>
                        <th scope="row">{{ loop.index +3 }}</th>
                        <td><img src="/assets/images/avatar{{ score['avatar_id'] }}.png" class="w-25"></td>
                        <td>{{ score['pseudo'] }}</td>
                        <td>{{ score['best_score'] }}</td>
                    </tr>
                {% else %}
                    Personne n'a joué
                {% endfor %}


            </tbody>
        </table>
    </div>
{% endblock %}