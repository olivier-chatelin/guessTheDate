{% extends 'layout.html.twig' %}
{% block title %}
    {{ parent() }} - Quizz
{% endblock %}
{% block content %}
    {% include '/Component/_badgeModal.html.twig' %}

    <div class="container-fluid game-content" xmlns="">

        <div class="row justify-content-between">
            <div class="numquestion rounded-circle bg-primary text-light m-2 p-2 text-center" style="width:50px; height:50px">
                <h2 class="m-auto">{{ session.game.numQuestion }}</h2>
            </div>
            <div>
                <h4 class="text-primary"> +  ou  - <br/> {{ session.game.currentErrorMargin }} ans</h4>
            </div>
            <div class="totalpoints text-primary text-right mr-3">
                <h2>Total<br>{{ session.game.currentScore}}</h2>
            </div>
        </div>
        <div class="row justify-content-center  position-relative align-items-center">
            <div id="carouselExampleIndicators" class="carousel slide " data-ride="carousel">
                {% if additionalImages is not empty %}
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        {% if additionalImages is not empty %}
                            {% for img in additionalImages %}
                                <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index }}"></li>
                            {% endfor %}
                        {%  endif %}
                    </ol>
                {%  endif %}
                <div class="carousel-inner frame3">
                    <div class="carousel-item active">
                        <img src="{{ pickedObject.primaryImageSmall }}" class="d-block img-car img-fluid  rounded"  alt="...">
                    </div>

                    {% if pickedObject.additionalImages is not empty %}
                        {% for img in pickedObject.additionalImages %}
                            <div class="carousel-item">
                                <img src="{{ img }}" class="d-block img-car img-fluid   bg-primary rounded"  alt="...">
                            </div>
                        {% endfor %}
                    {%  endif %}
                </div>
            </div>
            {% if pickedObject.additionalImages is not empty %}
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            {%  endif %}
        </div>

        <div class="row justify-content-center">
            <div class="col-sm-6 col-md-4 text-center form-quizz ">
                <form action="/Game/solution" method="post">
                    <input class="answer-form" id="answer" name="answer" type="number" inputmode="numeric" pattern="\-?[0-9]*" value="" minlength="4" maxlength="5" autofocus required class="mt-1">
                    <input name="objectId" type="hidden" value="{{ pickedObject.objectId}}" >
                    <button type="submit" class="btn btn-outline-primary" >
                        <i class="fas fa-check"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascript %}
{{ parent() }}
<script src="/assets/scripts/inputAnswer.js"></script>
<script src="/assets/scripts/showBadgeModal.js"></script>
{% endblock %}

